<h1>Selected Article</h1>
<h3>Name:<%= @article.name %></h3>
<h3>Body:<%= @article.body %></h3>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.id %></td>
                <td><%= comment.body %></td>
                <td><%= link_to 'Edit', edit_article_comment_path(@article.id, comment) %>Edit</td>
            </tr>
        <% end %>
    </tbody>
</table>


