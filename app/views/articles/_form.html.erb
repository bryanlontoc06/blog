<% if @article.errors.any? %>
<h3>The following errors prevented the article from getting created</h3>
    <ul>
        <% @article.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>


<%= form_for @article do |f| %>
    <p>
        <%= f.label :name %>
        </br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :body %>
        </br>
        <%= f.text_field :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>


<%= link_to "Back to article lists", articles_path %>