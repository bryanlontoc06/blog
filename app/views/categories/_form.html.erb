<% if @category.errors.any? %>
<h3>The following errors prevented the category from getting created</h3>
    <ul>
        <% @category.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @category do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to "Back to categories lists", categories_path %> 