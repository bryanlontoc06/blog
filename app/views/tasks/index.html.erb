<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Body</th>
      <th>Task date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.category_id %></td>
        <td><%= task.name %></td>
        <td><%= task.body %></td>
        <td><%= task.task_date %></td>
        <td><%= link_to 'Show', category_task_path(@category.id, task) %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', categories_path(@category) %> |
<%= link_to 'New Task', new_category_task_path(@category) %>

